doctype html
html
    head
        title="Product CRUD"
        link(href="https://bootswatch.com/3/paper/bootstrap.min.css",type="text/css",rel="stylesheet")
        meta(name="viewport",content="width=device-width,initial-scale=-1")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/boostrap.min.js")
    body
        nav.navbar.navbar-inverse
            .container
                .navbar-header  
                    a(class="navbar-brand",href="/") Product CRUD
                    button(class = "navbar-toggle",data-target="#myMenu",data-toggle="toggle")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                div(class="collapse navbar-collapse",id="myMenu")
                    ul.navbar-nav.nav   
                        li
                            a(href="/") Products
                        li
                            a(href="/create") Create

        .container
            .row
                .col-md-12.jumbotron.text-center
                    h1="Update Product"
            .row
                .col-md-6.col-md-offset-3.well
                    form(action="/update/"+products['_id'],method="POST")
                        .form-group
                            label="title"
                            input(type="text" class="form-control",name="title",placeholder="Enter title",required,value=products['title'])
                        .form-group
                            label="price"
                            input(type="number" class="form-control",name="price",placeholder="Enter price",required,value=products['price'])
                        .form-group
                            label="Image"
                            input(type="url" class="form-control",name="image",placeholder="https://xyz.com/1.jpg",required,value=products['image'])
                        .form-group
                            label="Info"
                            textarea(name="info", class="form-control", cols="30", rows="5",placeholder="Product Information",required)=products['info']
                        .form-group
                            label="Company"
                            input(type="text" class="form-control",name="company",placeholder="Company Name",required value=products['company'])
                        .form-group
                            input(type="submit", value="Create product",class="btn btn-info")