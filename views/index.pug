doctype html
html
    head
        title="Product CRUD"
        link(href="https://bootswatch.com/3/paper/bootstrap.min.css",type="text/css",rel="stylesheet")
        meta(name="viewport",content="width=device-width,initial-scale=-1")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/boostrap.min.js")
    body
        nav.navbar.navbar-inverse
            .container
                .navbar-header  
                    a(class="navbar-brand",href="/") Product CRUD
                    button(class = "navbar-toggle",data-target="#myMenu",data-toggle="toggle")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                div(class="collapse navbar-collapse",id="myMenu")
                    ul.navbar-nav.nav   
                        li
                            a(href="/") Products
                        li
                            a(href="/create") Create

        .container
            .row
                .col-md-12.jumbotron.text-center
                    h1="Products"
                    
            .row
                for x in products
                    .col-md-4
                        .panel.panel-primary
                            .panel-heading
                                h1.panel-title=x['title']
                            .panel-body
                                img(src=x['image'],class= "img-responsive")
                                ul.list-group
                                    li.list-group-item Price
                                        span.pull-right=x['price']
                                    li.list-group-item Company
                                        span.pull-right=x['company']
                                hr
                                p.text-center="Product Information"
                                p.text-justify=x['info']
                            .panel-footer
                                a(class="btn btn-info",href="/edit/"+x['_id'])
                                    span.glyphicon.glyphicon-edit
                                a(class="btn btn-danger pull-right",href="/delete/"+x['_id'])
                                    span.glyphicon.glyphicon-trash 